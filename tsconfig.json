{
	"compilerOptions": {
		"strict": true,
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"rootDir": "./src",
		"baseUrl": "./src",
		"paths": {
			"@/*": ["./*"],
			"@/config/*": ["./config/*"],
			"@/controllers/*": ["./controllers/*"],
			"@/middleware/*": ["./middleware/*"],
			"@/models/*": ["./models/*"],
			"@/routes/*": ["./routes/*"],
			"@/services/*": ["./services/*"],
			"@/utils/*": ["./utils/*"],
			"@/types/*": ["./types/*"],
			"@/database/*": ["./database/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
